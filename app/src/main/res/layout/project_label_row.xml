<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp">


        <TextView
            android:id="@+id/ProjectLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Ferovier Maroc"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="8dp"
            app:layout_constraintEnd_toEndOf="@+id/ProjectThumbs"
            app:layout_constraintStart_toStartOf="@+id/ProjectThumbs"
            app:layout_constraintTop_toBottomOf="@+id/ProjectThumbs" />

        <ImageView
            android:id="@+id/ProjectThumbs"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/travauxmaroc" />

</androidx.constraintlayout.widget.ConstraintLayout>